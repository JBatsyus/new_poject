            .periods-item__image(style="background-image:url('./img/speedometer.png')")
              .number-top
                  span 1
                  span 2
                  span 0
                  span 0
                  span 0
                  span 0
              .number-bottom 
                .txt-bottom до <span>12</span> <span>месяцев</span>
          .warranty_periods__item
            .periods-item__title Гарантия <br>на двигатель
